use Tygron as mas.
use knowledgebase as knowledge.
use tygronInit as module.

%Tests for the init module of the agents.	
test tygronInit with
	pre{true}
	in{
		%Test if all stakeholders are added to the beliefbase.
		%percept(stakeholders(List)), bel(member(SubList, List), member(stakeholer(ID, Name, Budget, Income), SubList))
		%	leadsto bel(stakeholder(ID, Name, Budget, Income)).
		eventually bel(stakeholder(0, 'Gemeente', _, _)).	
		eventually bel(stakeholder(1, 'Bedrijf', _, _)).
		eventually bel(stakeholder(2, 'Private_Woningbouw_Burgers', _, _)).
		eventually bel(stakeholder(3, 'TU', _, _)).
		eventually bel(stakeholder(4, 'DUWO', _, _)).
		eventually bel(stakeholder(5, 'Voorzieningen', _, _)).
			
		%Test if all indicatorLinks are added to the beliefbase.
		%percept(stakeholders(List)), bel(member(SubList, List), member(indicatorLink(ID, Weights), SubList))
		%	leadsto bel(indicatorLink(2, Weigths)).
		eventually bel(indicatorLink(2, Weights)).
		
		%Test if only the the indicatorLinks for our own stakeholder are added.
		always not(bel(indicatorLink(ID, Weights), ID \= 2)).
		%eventually bel(indicatorLink(ID, Weigths), ID \= 2).
			
		%Test if all zones are added to the beliefbase.
		%percept(zones(List)), bel(member(zone(ID, A, B, C, D), List))
		%	leadsto bel(zone(ID, A, B, C, D)).
		eventually bel(zone(ID, Name, OwnerID, C, D)).
	}
	post{true}
	
	tygronagent {
		do tygronInit.	
	}